{
  "name": "nepali-number-system",
  "version": "1.0.0",
  "description": "Convert numbers to Nepali words representation",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "unpkg": "./dist/umd/nepali-number-system.min.js",
  "types": "./dist/cjs/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tilakkhatri/convertNumberToWordsInNepaliSystem.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:umd",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:umd": "webpack --config ./webpack.config.js",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest"
  },
  "keywords": [
    "nepali",
    "number",
    "converter",
    "rupees",
    "paisa"
  ],
  "author": "Tilak Khatri",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/jquery": "^3.5.32",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.5",
    "webpack": "^5.99.8",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "jquery": ">=1.8.0",
    "react": ">=16.8.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}